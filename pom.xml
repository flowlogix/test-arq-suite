<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.flowlogix</groupId>
    <artifactId>test-arq-suite</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>test-arq-suite</name>
    <description>Simple Test Arquillian Suite</description>

    <parent>
        <groupId>com.flowlogix</groupId>
        <artifactId>payara-pom</artifactId>
        <version>17</version>
    </parent>

    <properties>
        <maven.compiler.release>11</maven.compiler.release>
        <payara.start.disable>true</payara.start.disable>
        <arquillian.launch>payara-docker</arquillian.launch>
        <checkstyle.supressionsLocation>${basedir}/checkstyle/suppressions.xml</checkstyle.supressionsLocation>
        <test.redirect.to.file>false</test.redirect.to.file>
        <arquillian.payara.version>3.0</arquillian.payara.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>jakarta.platform</groupId>
            <artifactId>jakarta.jakartaee-api</artifactId>
            <version>${jakarta.ee.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>com.flowlogix.depchain</groupId>
            <artifactId>integration-test</artifactId>
            <version>9</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>fish.payara.arquillian</groupId>
            <artifactId>arquillian-payara-server-remote</artifactId>
            <version>${arquillian.payara.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
            <version>2.0.13</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>payara-server-remote</id>
            <properties>
                <arquillian.launch>payara</arquillian.launch>
                <payara.start.skip>true</payara.start.skip>
                <testcontainers.skip>true</testcontainers.skip>
            </properties>
        </profile>
        <profile>
            <id>payara-server-managed</id>
            <properties>
                <arquillian.launch>payara</arquillian.launch>
                <payara.start.disable>${skipITs}</payara.start.disable>
                <testcontainers.skip>true</testcontainers.skip>
            </properties>
        </profile>
    </profiles>
</project>
